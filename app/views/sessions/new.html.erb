<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <div class="flex justify-center">
      <img src="/icon.svg" class="h-10 w-auto" alt="Fluxfolio">
    </div>
    <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900 dark:text-white">
      Sign in to your account
    </h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_with url: session_url, data: { turbo: false }, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :email_address, class: "block text-sm font-medium leading-6 text-gray-900 dark:text-white" %>
        <div class="mt-2">
          <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", value: params[:email_address], 
              class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500", 
              placeholder: "name@company.com" %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <%= form.label :password, class: "block text-sm font-medium leading-6 text-gray-900 dark:text-white" %>
          <div class="text-sm">
            <%= link_to "Forgot password?", new_password_path, class: "font-semibold text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300" %>
          </div>
        </div>
        <div class="mt-2">
          <%= form.password_field :password, required: true, autocomplete: "current-password", maxlength: 72, 
              class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500", 
              placeholder: "••••••••" %>
        </div>
      </div>

      <div>
        <%= form.submit "Sign in", 
            class: "flex w-full justify-center rounded-md bg-blue-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 dark:bg-blue-600 dark:hover:bg-blue-700 transition-colors" %>
      </div>
    <% end %>

    <p class="mt-10 text-center text-sm text-gray-500 dark:text-gray-400">
      Don't have an account?
      <%= link_to "Sign up", new_signup_path, data: { turbo: false }, class: "font-semibold leading-6 text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300" %>
    </p>
  </div>
</div>
